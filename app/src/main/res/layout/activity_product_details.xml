<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        tools:context="com.greenshopap.bel.greenshop_eca.ProductDetailsActivity">

        <LinearLayout
                android:layout_weight="0.7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#afffffff"
        >
            <ImageView
                    android:id="@+id/image_details_id"
                    android:layout_width="315dp"
                    android:layout_height="270dp"
                    android:padding="3dp"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_weight="1.3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/product_details_shape"
        >
            <TextView
                    android:id="@+id/details_modelname_id"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Model Name"
                    android:textStyle="normal|bold"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:textColor="#ffffff"
                    android:layout_margin="3dp"
                    android:paddingRight="15dp"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2"
            >
                <LinearLayout
                        android:layout_weight="0.8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="3"
                >
                    <TextView
                            android:layout_weight="1.3"
                            android:gravity="center|right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textSize="22sp"
                            android:textColor="#ffffff"
                            android:textStyle="bold|normal"
                    />
                    <TextView
                            android:layout_weight="0.9"
                            android:id="@+id/details_price_id"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2192000"
                            android:textSize="22sp"
                            android:textColor="#ffffff"
                            android:textStyle="bold|normal"
                    />
                    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                            android:layout_weight="0.8"
                            android:id="@+id/product_qntnum_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="5dp"
                            app:textSize="12sp"
                            app:initialNumber="1"
                            app:finalNumber="50"
                            android:layout_margin="2dp"
                            app:backGroundColor="#2196f3"
                            app:textColor="#000000"
                            android:gravity="right"
                            android:paddingRight="5dp"
                    >
                    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
                </LinearLayout>
                <LinearLayout
                        android:layout_weight="1.2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                        android:padding="2dp"
                >
                    <Button
                            android:id="@+id/addtocart_btn_id"
                            android:layout_margin="1dp"
                            android:background="@drawable/add_cart_btn_shape"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:text="Add to cart"
                            android:textStyle="normal|bold"
                            android:textSize="15sp"
                            android:textColor="#ffffff"
                    />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
</LinearLayout>
