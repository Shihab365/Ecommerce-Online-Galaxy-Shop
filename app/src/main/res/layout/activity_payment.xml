<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical"
        android:background="#0f4f71"
        tools:context="com.greenshopap.bel.greenshop_eca.PaymentActivity">

        <LinearLayout
                android:layout_weight="1.4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
        >
            <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="5dp"
            >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:background="@drawable/totalbill_bg"
                >
                    <TextView
                            android:gravity="right|center"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Total Bill:"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:textSize="25sp"
                            android:paddingRight="5dp"
                    />
                    <TextView
                            android:id="@+id/totalbill_id"
                            android:paddingLeft="5dp"
                            android:gravity="left|center"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="150000"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:textSize="25sp"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                card_view:cardMaxElevation="5dp"
                card_view:cardBackgroundColor="#26cacaca"
        >
            <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Select payment method"
                    android:textSize="20sp"
                    android:textStyle="bold|normal"
                    android:textColor="#ffffff"
            />
        </android.support.v7.widget.CardView>

        <LinearLayout
                android:layout_weight="0.6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >
            <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="#26cacaca"
                    card_view:cardCornerRadius="6dp"
                    card_view:cardElevation="5dp"
            >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="2"
                >
                    <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                    >
                        <android.support.v7.widget.CardView
                                android:layout_weight="1"
                                xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                card_view:cardUseCompatPadding="true"
                                card_view:cardBackgroundColor="#ffffff"
                                card_view:cardCornerRadius="6dp"
                                card_view:cardElevation="5dp"
                                android:clickable="true"
                                android:id="@+id/bkash_id"
                        >
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/bkash_logo"
                                    android:padding="10dp"
                            />
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                                android:layout_weight="1"
                                xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                card_view:cardUseCompatPadding="true"
                                card_view:cardBackgroundColor="#ffffff"
                                card_view:cardCornerRadius="6dp"
                                card_view:cardElevation="5dp"
                                android:clickable="true"
                                android:id="@+id/rocket_id"
                        >
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/rocket_logo"
                                    android:padding="10dp"
                            />
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2"
                    >
                        <android.support.v7.widget.CardView
                                android:layout_weight="1"
                                xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                card_view:cardUseCompatPadding="true"
                                card_view:cardBackgroundColor="#ffffff"
                                card_view:cardCornerRadius="6dp"
                                card_view:cardElevation="5dp"
                                android:clickable="true"
                                android:id="@+id/nexus_id"
                        >
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/nexuspay_logo"
                                    android:padding="10dp"
                            />
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                                android:layout_weight="1"
                                xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                card_view:cardUseCompatPadding="true"
                                card_view:cardBackgroundColor="#ffffff"
                                card_view:cardCornerRadius="6dp"
                                card_view:cardElevation="5dp"
                                android:clickable="true"
                                android:id="@+id/paypal_id"
                        >
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/paypal_logo"
                                    android:padding="10dp"
                            />
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
</LinearLayout>
