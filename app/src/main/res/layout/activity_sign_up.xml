<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/signup_ui"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"
        tools:context="com.greenshopap.bel.greenshop_eca.SignUpActivity">

        <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:text="Sign Up"
                android:textColor="#ffffff"
                android:textStyle="bold|normal"
                android:textSize="30sp"
        />
        <View
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ffffff"
                android:layout_marginBottom="5dp"
        />
        <EditText
                android:id="@+id/signup_name_id"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:hint="Full Name"
                android:background="@drawable/sign_up_field"
                android:drawableLeft="@drawable/nameicon"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:layout_marginTop="8dp"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
        />
        <EditText
                android:id="@+id/signup_mobile_id"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:hint="Mobile Number"
                android:background="@drawable/sign_up_field"
                android:drawableLeft="@drawable/mobileicon"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:layout_marginTop="8dp"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:inputType="numberDecimal"
        />
        <EditText
                android:id="@+id/signup_email_id"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:hint="Email"
                android:background="@drawable/sign_up_field"
                android:drawableLeft="@drawable/mailicon"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:layout_marginTop="8dp"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
        />
        <EditText
                android:id="@+id/signup_password_id"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textColorHint="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:hint="Password"
                android:drawablePadding="10dp"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/passicon"
                android:background="@drawable/sign_up_field"
                android:layout_marginBottom="10dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="8dp"
        />

        <View
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ffffff"
                android:layout_marginBottom="5dp"
        />

        <Button
                android:id="@+id/signup_button_id"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:padding="3dp"
                android:textStyle="bold|normal"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:background="@drawable/signup_button"
        />
</LinearLayout>
