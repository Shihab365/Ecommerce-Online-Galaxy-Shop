<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:background="#ffffff"
        tools:context="com.greenshopap.bel.greenshop_eca.ShippingActivity">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shipping_card_bg"
                android:orientation="vertical"
                android:weightSum="7"
        >
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Shipping Info"
                        android:textStyle="normal"
                        android:textSize="25sp"
                        android:textColor="#000000"
                        android:background="@drawable/shipping_info_text_bg"
                        android:gravity="center"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
            >
                <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                >
                    <EditText
                            android:id="@+id/ship_firstname_id"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="First Name"
                            android:textColorHint="#000000"
                            android:textColor="#000000"
                            android:textSize="17sp"
                            android:background="@drawable/shipping_edittext_box"
                            android:paddingLeft="4dp"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                >
                    <EditText
                            android:id="@+id/ship_lastname_id"
                            android:paddingLeft="4dp"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Last Name"
                            android:textColorHint="#000000"
                            android:textColor="#000000"
                            android:textSize="17sp"
                            android:background="@drawable/shipping_edittext_box"
                    />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            >
                <EditText
                        android:id="@+id/ship_address1_id"
                        android:paddingLeft="4dp"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Address Line 1"
                        android:textColorHint="#000000"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:background="@drawable/shipping_edittext_box"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            >
                <EditText
                        android:id="@+id/ship_address2_id"
                        android:paddingLeft="4dp"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Address Line 2 (Optional)"
                        android:textColorHint="#000000"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:background="@drawable/shipping_edittext_box"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"
            >
                <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                >
                    <EditText
                            android:id="@+id/ship_city_id"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="City"
                            android:textColorHint="#000000"
                            android:textColor="#000000"
                            android:textSize="17sp"
                            android:background="@drawable/shipping_edittext_box"
                            android:paddingLeft="4dp"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                >
                    <EditText
                            android:id="@+id/ship_zip_id"
                            android:paddingLeft="4dp"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Zip"
                            android:textColorHint="#000000"
                            android:textColor="#000000"
                            android:textSize="17sp"
                            android:background="@drawable/shipping_edittext_box"
                    />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            >
                <EditText
                        android:id="@+id/ship_phone_id"
                        android:paddingLeft="4dp"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Phone Number"
                        android:textColorHint="#000000"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:background="@drawable/shipping_edittext_box"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            >
                <Button
                        android:id="@+id/billing_btn_id"
                        android:layout_margin="9dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Ship Now"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:background="#0b4868"
                />
            </LinearLayout>
        </LinearLayout>

</LinearLayout>
